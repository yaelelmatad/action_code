LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/usr/local/lib
export LD_LIBRARY_PATH

cd $PBS_O_WORKDIR

source /etc/profile.d/env-modules.sh
source ~/.bashrc

module load mpiexec/gnu/0.84

mpiexec -n 8 ./trap.out &> output

module unload mpiexec/gnu/0.84

exit 0;
